    ContentMem0[3] = segd2.d_on;
    ContentMem0[4] = segd2.c_on;
    ContentMem0[5] = segd2.b_on;
    ContentMem0[6] = segd2.a_on;

    ContentMem1[0] = segd3.g_on;
