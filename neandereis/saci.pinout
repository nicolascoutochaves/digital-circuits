    oMem128_7s[0]      =   segd1.g_on;
    oMem128_7s[1]      =   segd1.f_on;
    oMem128_7s[2]      =   segd1.e_on;
    oMem128_7s[3]      =   segd1.d_on;
    oMem128_7s[4]      =   segd1.c_on;
    oMem128_7s[5]      =   segd1.b_on;
    oMem128_7s[6]      =   segd1.a_on;

    ContentMem0[0] = segd2.g_on;
